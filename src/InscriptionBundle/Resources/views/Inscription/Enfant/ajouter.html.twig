{% extends '@Inscription/layout.html.twig' %}

{% block content %}
    {{ form_start(form, {attr: {novalidate: 'novalidate'}}) }}
    {{ form_errors(form) }}
    {% include '@Inscription/Inscription/Enfant/formAdd.html.twig' %}
    <div id="formChild" style="border: 2px solid red; margin-top: 20px;">

    </div>
    <div class="w3-bar">
        <button type="submit" class="w3-button w3-white w3-border">Ajouter</button>
        <a href="{{ path('parent_enfants', {'parent_id':parent_id}) }}" class="w3-button w3-white w3-border">Annuler</a>
        <button id="addChild">+Ajouter un enfant</button>
    </div>
    {{ form_end(form) }}

    <script>
        $("document").ready(function () {
            $("#addChild").on("click", function () {
                $("#formChild").append("" +
                    "  <div class=\"row\"><div class=\"col-sm-6\"><div class=\"form-group\"><label class=\"control-label required\">Nom</label><input type=\"text\" id="inscriptionbundle_enfant_nom" name=\"inscriptionbundle_enfant[nom]\"  maxlength="255" pattern=\".{4,}\" class=\"form-control\" /></div></div> " +
                "<div class=\"col-sm-6\"><div class=\"form-group\"><label class=\"control-label required\" for=\"inscriptionbundle_enfant_prenom\">Prenom</label><input type="text" id=\"inscriptionbundle_enfant_prenom\" name=\"inscriptionbundle_enfant[prenom]\" maxlength=\"255\" pattern=\".{4,}\" class=\"form-control\" />"
                "</div></div></div><div class=\"col-sm-6\"><div class=\"form-group\"><label class=\"control-label required\" for=\"inscriptionbundle_enfant_genre\">Genre</label><select id=\"inscriptionbundle_enfant_genre\" name=\"inscriptionbundle_enfant[genre]\" class=\"form-control\"><option value=\"Garçon\">Garçon</option><option value=\"Fille\">Fille</option></select></div></div></div>");
                return false;
            });
        });
    </script>
{% endblock %}
