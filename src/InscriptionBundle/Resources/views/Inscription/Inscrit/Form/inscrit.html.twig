{{ form_start(form, {attr: {novalidate: 'novalidate'}}) }}
{{ form_errors(form) }}

<fieldset class="w3-margin w3-white"><legend class="w3-yellow w3-padding-small">Enfant</legend>
    <div class="row">
        <div class="col-sm-6">
            {{ form_label(form.enfant.nom, 'Nom:') }}
            {{ form_widget(form.enfant.nom, {'attr':{'class':'w3-disabled'}}) }}
        </div>
        <div class="col-sm-6">
            {{ form_label(form.enfant.prenom, 'Prenom:') }}
            {{ form_widget(form.enfant.prenom, {'attr':{'class':'w3-disabled'}}) }}
        </div>
    </div>
    <div class="row"><div class="col-sm-12">&nbsp;</div></div>
    <div class="row">
        <div class="col-sm-6">
            {{ form_label(form.enfant.dateNaissance, 'Date de naissance') }}
            {{ form_widget(form.enfant.dateNaissance, {'attr':{'class':'w3-disabled'}}) }}
        </div>
        <div class="col-sm-6">
            {{ form_label(form.enfant.genre, 'Sexe:') }}
            {{ form_row(form.enfant.genre) }}
        </div>
    </div>
</fieldset>

<fieldset class="w3-margin w3-white"><legend class="w3-green w3-padding-small">Classe</legend>
    <div class="row">
        <div class="col-sm-12">{{ form_row(form.niveau) }}</div>
    </div>
</fieldset>

<fieldset class="w3-margin w3-white"><legend class="w3-green w3-padding-small">Frais Inscription</legend>
    <div class="row">
        <div class="col-sm-4">{{ form_row(form.annee) }}</div>
        <div class="col-sm-4">{{ form_row(form.frais) }}</div>
        <div class="col-sm-4">{{ form_row(form.paye) }}</div>
    </div>
</fieldset>
<div class="row">
    <div class="col-sm-12">
        <div class="w3-panel" style="width:100%">
            <button type="submit" class="w3-btn w3-block w3-blue">Suivant ></button>
        </div>
    </div>
</div>
{{ form_end(form) }}
